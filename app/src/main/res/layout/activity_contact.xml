<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youtubeminimizer.youtubebackgroundplayer.ContactActivity">

    <ImageView
        android:layout_width="412dp"
        android:layout_height="200dp"
        android:background="@drawable/logo_main"
        android:id="@+id/imgLogoMain"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="22sp"
        android:text="by Truth Developers"
        android:layout_alignBottom="@+id/imgLogoMain"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:textColor="#f61020"
        android:id="@+id/txtCompanyTitle"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/imgLogoMain"
        app:cardElevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:background="@drawable/contact_click_background"
            android:id="@+id/emailLayout">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_email"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="GothamDevelopers@gmail.com"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="#345"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
